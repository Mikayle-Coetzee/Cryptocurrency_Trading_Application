<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    android:orientation="vertical"
    tools:context=".View.ui.AddWallet.AddWalletFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgBtnBack"
            android:layout_width="41dp"
            android:layout_height="61dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/backbtndrawable" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtBuyBTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/inter_bold"
            android:text="Add Wallet"
            android:textColor="@color/PrimaryTxtColor"
            android:textSize="35sp" />

        <Space
            android:layout_width="45dp"
            android:layout_height="52dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/imgBtnSettings"
            android:layout_width="51dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/gear_solid" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="50dp"
        android:background="@drawable/borderforaddwallet"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtWalletType"
            android:layout_width="223dp"
            android:layout_height="29dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="18dp"
            android:layout_weight="1"
            android:text="Wallet Type"
            android:textColor="@color/PrimaryTxtColor" />

        <Spinner
            android:id="@+id/spnWalletType"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/borderforaddwalletspinner" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgButtonAddWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/add_wallet_image" />

</LinearLayout>