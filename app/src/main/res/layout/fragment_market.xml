<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_market"
    android:orientation="vertical"
    android:background="@color/BackGround"
    tools:context=".View.ui.MarketPlace.MarketFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textAlignment="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/BtnBack"
                    android:layout_width="41dp"
                    android:layout_height="61dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/backbtndrawable"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:textAlignment="center"
                    style="@style/TxtPrimaryStyle"
                    android:textSize="30sp"
                    android:text="Trade" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/ImgBtnSettings"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/gear_solid"
                    />

            </LinearLayout>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/profileframe"
                />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView2"
                android:name="za.co.varsitycollege.opsc7312_poe_tactical_trades.View.ui.MarketPlace.allcoinsFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>

    </ScrollView>




</LinearLayout>