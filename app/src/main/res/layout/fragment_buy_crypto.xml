<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".View.ui.BuyCrypto.BuyCryptoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnGoToSellBTC"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/buybtc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginVertical="15dp"
        android:layout_margin="10dp"
        style="@style/CustomImageButtonStyleBuyAndSell"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewCurrencyImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/dollar_sign_icon" />

            <ImageButton
                android:id="@+id/imgViewAmountOfMoneyToPay"
                android:layout_width="83dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:background="@android:color/transparent"
                android:layout_marginStart="215dp"
                android:src="@drawable/amount_of_money" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCryptos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="@string/money"
                android:textColor="@color/PrimaryTxtColor"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBitcoins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:text="USD"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                >
            <TextView
                android:id="@+id/txtAmountOfDollarsAdded"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:hint="1.00"
                android:background="@drawable/rounded_filled_box"
                android:backgroundTint="@color/BackgroundTxtBx"
                android:padding="3dp"
                android:textColor="@color/PrimaryTxtColor"
                android:textColorHint="@color/PrimaryTxtColor"
                android:textSize="18dp"/>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgSwapToSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/CustomSwitch"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginVertical="10dp"
        android:layout_margin="10dp"
        style="@style/CustomImageButtonStyleBuyAndSell"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewBTCLogoForSell"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:src="@drawable/buy_btc_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCryptoForSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Crypto"
                android:textColor="@color/PrimaryTxtColor"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Bitcoin"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <FrameLayout
                android:layout_width="150dp"
                android:layout_marginEnd="10dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/txtAmountOfBitcoin"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    android:hint="0.00"
                    android:padding="2dp"
                    android:textColorHint="@color/PrimaryTxtColor"
                    android:textColor="@color/PrimaryTxtColor"
                    android:textSize="18dp"/>

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/imgBtnConfirmPurchase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CustomConfirm"></ImageButton>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_medium"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>