<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:layout_width="41dp"
            android:layout_height="61dp"
            android:layout_margin="10dp"
            android:background="@drawable/backbtndrawable"
            />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/TxtViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:textAlignment="center"
            style="@style/TxtPrimaryStyle"
            android:textSize="30sp"
            android:text="ETH" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_margin="10dp"
            android:background="@drawable/gear_solid"
            />

    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/stockIconImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:clipToOutline="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/amazon_icon"
                        android:tag="@string/amazon_icon" />




                    <TextView
                    android:id="@+id/TxtViewName"
                    style="@style/TxtSmallPrimaryStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amazon Inc"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"                android:textSize="14dp"
                    android:textColor="@color/LightGray"/>
                </LinearLayout>


            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />


               <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/TxtViewCurrent"
                    style="@style/TxtSmallPrimaryStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textSize="20dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="$113.22" />

                <TextView
                    android:id="@+id/TxtViewDifference"
                    style="@style/TxtSmallPrimaryStyle"
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:text="+9.77%"
                    android:textAlignment="textEnd"
                    android:textColor="@color/green"
                    android:textSize="14dp" />

            </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

        </LinearLayout>

        <Button
            android:id="@+id/BtnAddToWatchList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add To Watch List"
            android:layout_margin="10dp"
            ></Button>

    </LinearLayout>
</ScrollView>