<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="41dp"
                android:layout_height="61dp"
                android:layout_margin="10dp"
                android:background="@drawable/backbtndrawable" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/TxtViewID"
                style="@style/TxtPrimaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="ETH"
                android:textAlignment="center"
                android:textSize="30sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:layout_margin="10dp"
                android:background="@drawable/gear_solid" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/CoinIconImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/circle"
                        android:clipToOutline="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/eth_logo"
                        android:tag="@string/amazon_icon" />

                    <TextView
                        android:id="@+id/TxtViewName"
                        style="@style/TxtSmallPrimaryStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="ETHEREUM"
                        android:textColor="@color/white"
                        android:textSize="30dp" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <ImageView
                            android:id="@+id/CoinDateImage"
                            android:layout_width="106dp"
                            android:layout_height="50dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/greyroundrectangle" />

                        <TextView
                            android:id="@+id/dateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|center_horizontal"
                            android:text="APR 20, 2022"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/priceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:text="$92.96"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:textAlignment="textEnd">

                    <TextView
                        android:id="@+id/TxtViewCurrent"
                        style="@style/TxtSmallPrimaryStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="$113.22"
                        android:textAlignment="textEnd"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/TxtViewDifference"
                        style="@style/TxtSmallPrimaryStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:text="+9.77%"
                        android:textAlignment="textEnd"
                        android:textColor="@color/green"
                        android:textSize="14dp" />

                    <Space
                        android:layout_width="78dp"
                        android:layout_height="30dp" />

                    <Button
                        android:id="@+id/BtnAddToWatchList"
                        android:layout_width="125dp"
                        android:layout_height="40dp"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/LinkBlue"
                        android:text="Add to Watch List"
                        android:textSize="4pt" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="My Wallet Value"
                android:textColor="@color/PrimaryTxtColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="341dp"
                    android:layout_height="199dp"
                    android:background="@drawable/gradient_for_ethereum"
                    android:gravity="center"
                    android:padding="16dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alignmentMode="alignMargins"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:useDefaultMargins="true">

                        <ImageView
                            android:id="@+id/imgEthLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="top|center"
                            android:src="@drawable/eth_logo" />

                        <TextView
                            android:id="@+id/txtEthLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="top|left"
                            android:text="ETHEREUM"
                            android:textColor="@color/PrimaryTxtColor"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtWalletBalance"
                            android:layout_width="166dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_gravity="right|center"
                            android:text="7.32"
                            android:textColor="@color/PrimaryTxtColor"
                            android:textSize="35sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtCurrency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_gravity="center|left"
                            android:text="ETH"
                            android:textColor="@color/PrimaryTxtColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtPercentageChange"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_gravity="top|center"
                            android:text="+ 24.60 %"
                            android:textColor="@color/green"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </GridLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>